<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5BA68"
    android:backgroundTint="#E5BA68"
    tools:context=".ui.register_and_login.RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.register_and_login.LoginActivity">

        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/background"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/logoImage"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/viadee_logo"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/backgroundImage"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/registerbtn"
            android:layout_width="200dp"
            android:layout_height="53dp"
            android:backgroundTint="#E5BA68"
            android:text="Register"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logoImage" />

        <EditText
            android:id="@+id/Password"
            android:layout_width="354dp"
            android:layout_height="54dp"
            android:layout_marginStart="41dp"
            android:layout_marginTop="502dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="175dp"
            android:background="#E5BA68"
            android:backgroundTint="#E5BA68"
            android:ems="10"
            android:inputType="textVisiblePassword"
            android:text="Password"
            android:textColor="#FFFFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/Email"
            android:layout_width="227dp"
            android:layout_height="52dp"
            android:layout_marginStart="41dp"
            android:layout_marginTop="438dp"
            android:layout_marginEnd="143dp"
            android:layout_marginBottom="241dp"
            android:background="#E5BA68"
            android:backgroundTint="#E5BA68"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="Email"
            android:textColor="#FFFFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/passwordConfirmation"
            android:layout_width="354dp"
            android:layout_height="54dp"
            android:layout_marginStart="41dp"
            android:layout_marginTop="562dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="115dp"
            android:background="#E5BA68"
            android:backgroundTint="#E5BA68"
            android:ems="10"
            android:inputType="textVisiblePassword"
            android:text="Confirm Password"
            android:textColor="#FFFFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/firstName"
            android:layout_width="180dp"
            android:layout_height="55dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="310dp"
            android:layout_marginEnd="189dp"
            android:layout_marginBottom="366dp"
            android:background="#E5BA68"
            android:ems="10"
            android:inputType="text"
            android:text="Firstname"
            android:textColor="#FFFFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/lastName"
            android:layout_width="164dp"
            android:layout_height="56dp"
            android:layout_marginStart="231dp"
            android:layout_marginTop="310dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="365dp"
            android:background="#FF9800"
            android:backgroundTint="#E5BA68"
            android:ems="10"
            android:inputType="text"
            android:text="Lastname"
            android:textColor="#FFFFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/ID"
            android:layout_width="119dp"
            android:layout_height="51dp"
            android:layout_marginStart="275dp"
            android:layout_marginTop="438dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="242dp"
            android:background="#E5BA68"
            android:ems="10"
            android:inputType="text"
            android:text="Viadee's ID"
            android:textColor="#FFFFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="354dp"
            android:layout_height="54dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="373dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="304dp"
            android:background="#E5BA68"
            android:backgroundTint="#E5BA68"
            android:ems="10"
            android:inputType="text"
            android:text="Username"
            android:textColor="#FFFFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>